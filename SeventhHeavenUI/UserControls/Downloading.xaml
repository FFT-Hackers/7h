    <Grid Background="#FF5E5E5E">
        <ProgressBar
            Value="{Binding ProgressValue, FallbackValue=33, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            VerticalAlignment="Bottom"
            Margin="49,0,51,210"
            Height="26">
            <ProgressBar.Style>
                <Style TargetType="{x:Type ProgressBar}" BasedOn="{StaticResource MainProgressBarStyle}">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ProgressValue, FallbackValue=5}" Value="0">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ProgressBar.Style>
        </ProgressBar>
        <Button x:Name="btnPause"
            TabIndex="13"
            ToolTipService.ShowOnDisabled="True"
            IsEnabled="{Binding PauseDownloadIsEnabled}"
            ToolTip="{Binding PauseDownloadToolTip, FallbackValue=Pause/Resume Selected Download}"
            Click="btnPause_Click"
            Margin="504,336,188,51" Height="43" Width="47" RenderTransformOrigin="-0.468,3">
            <Button.Style>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource SmallImageButton}">
                    <Setter Property="Content" Value="{StaticResource iconCloudPlay2}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelectedDownloadPaused}" Value="False">
                            <Setter Property="Content" Value="{StaticResource iconCloudPause2}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="btnCancel"
            TabIndex="14"
            ToolTipService.ShowOnDisabled="True"
            ToolTip="{DynamicResource CancelDownloadTooltip}"
            Style="{StaticResource SmallImageButton}"
            Content="{StaticResource iconCloudStop2}"
            Click="btnCancel_Click" Height="43" Margin="575,338,116,50" Width="47"/>
        <Button x:Name="btnRetryInstall"
            TabIndex="15"
            ToolTipService.ShowOnDisabled="True"
            IsEnabled="{Binding RetryInstallIsEnabled}"
            ToolTip="{DynamicResource RetryInstallTooltip}"
            Style="{StaticResource SmallImageButton}"
            Content="{StaticResource iconReset2}"
            Click="btnRetryInstall_Click" Height="43" Margin="432,337,258,50" Width="47"/>

    </Grid>
</Window>
